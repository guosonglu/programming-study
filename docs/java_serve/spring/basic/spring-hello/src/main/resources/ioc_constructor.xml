<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="user" class="com.luguosong.ioc.hello.User">
        <!--指定构造函数第一个参数-->
        <constructor-arg index="0" value="12"/>
        <!--指定构造函数第二个参数-->
        <constructor-arg index="1" value="李四"/>
    </bean>


    <bean id="userService" class="com.luguosong.ioc.hello.UserService">
        <!--注入对象-->
        <constructor-arg index="0" ref="user"/>
    </bean>

    <bean id="userService2" class="com.luguosong.ioc.hello.UserService">
        <!--使用参数名称name指定参数-->
        <constructor-arg name="user" ref="user"/>
    </bean>

    <bean id="userService3" class="com.luguosong.ioc.hello.UserService">
        <!--根据类型推断指定参数-->
        <constructor-arg ref="user"/>
    </bean>

</beans>
